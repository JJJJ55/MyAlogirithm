package Tier_2;

import java.util.Arrays;
import java.util.Scanner;

public class Ex10819 {
	static int arr[],n;
	
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		n = sc.nextInt();
		arr = new int[n];
		for(int i=0;i<n;i++) {
			arr[i] = sc.nextInt();
		}
		
		Arrays.sort(arr);
		int sum = 0;
		for(int i=arr.length-1;i>0;i--) {
			sum+=arr[i]-arr[i-1];
		}
		System.out.println(sum);
	}
}

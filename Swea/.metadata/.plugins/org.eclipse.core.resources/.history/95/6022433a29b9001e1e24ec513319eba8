package D2;

import java.util.Scanner;

public class Ex1859 {
	public static void main(String[] args){
		Scanner sc = new Scanner(System.in);
		int T = sc.nextInt();
		
		for(int t=0;t<T;t++) {
			int n = sc.nextInt();
			int[]arr = new int[n];
			int max = 0;
			int sum = 0;
			for(int i=0;i<n;i++) {
				arr[i] = sc.nextInt();
				max = Math.max(max, arr[i]);
			}
			
			for(int i=arr.length-1;i>=0;i--) {
				if(arr[i]!=max) {
					sum+=(max-arr[i]);
				} else {
					for(int j=0;j<i;j++) {
						max = Math.max(max, arr[j]);
					}
				}
			}
			System.out.printf("#%d %d\n",t+1,sum);
		}
	}

}
